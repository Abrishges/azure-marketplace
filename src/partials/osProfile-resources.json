{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json# ",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName" : {
          "type" : "string"
        },
        "credentials": {
            "type": "object"
        }
    },
    "variables": {
      "password_osProfile": {
        "computername": "[parameters('computerName')]",
        "adminUsername": "[parameters('credentials').adminUsername]",
        "adminPassword": "[parameters('credentials').password]"
      },
      "sshPublicKey_osProfile": {
        "computername": "[parameters('computerName')]",
        "adminUsername": "[parameters('credentials').adminUsername]",
        "linuxConfiguration": {
          "disablePasswordAuthentication": "true",
          "ssh": {
            "publicKeys": [ {
              "path": "[concat('/home/', parameters('credentials').adminUsername, '/.ssh/authorized_keys')]",
              "keyData": "[parameters('password').sshPublicKey]"
            } ]
          }
        }
      }
    },
    "resources": [],
    "outputs" : {
        "osProfile": {
            "value": "[variables(concat(parameters('password').authenticationType, '_osProfile'))]",
            "type": "object"
        }
    }
}
